{
  "name": "timeout_frontend",
  "version": "1.0.0",
  "description": "Frontend of the timeout system",
  "main": "index.js",
  "scripts": {
    "start": "if [ \"$NODE_ENV\" = \"production\" ]; then fin-serve; else node server.js; fi",
    "build": "NODE_ENV='production' webpack -p",
    "postbuild": "npm run analyze-dev && npm run analyze-prod",
    "lint": "eslint src test config",
    "precommit": "npm run lint",
    "test": "NODE_ENV=test mocha",
    "docker": "docker-compose up frontend",
    "postdocker": "docker-compose down",
    "dockertest": "docker-compose -p test up timeout_frontend_test",
    "postdockertest": "docker-compose -p test down",
    "predockerprod": "echo 'RUN npm run build' >> Dockerfile",
    "dockerprod": "docker-compose up timeout_frontend_prod",
    "postdockerprod": "npm run postdocker",
    "cover": "babel-node node_modules/babel-istanbul/lib/cli.js cover node_modules/mocha/bin/_mocha -- test --recursive",
    "see-cover": "cd coverage/lcov-report && python -m SimpleHTTPServer 8000",
    "analyze-dev": "./node_modules/.bin/webpack --json | webpack-bundle-size-analyzer > ./coverage/distribution.txt",
    "analyze-prod": "NODE_ENV='production' webpack -p --json | webpack-bundle-size-analyzer > ./coverage/prod.txt"
  },
  "keywords": [
    "timer",
    "react",
    "random"
  ],
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.9.1",
    "babel-eslint": "^7.1.0",
    "babel-istanbul": "^0.12.1",
    "babel-loader": "^6.2.4",
    "babel-plugin-styled-components": "^0.0.2",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.6.1",
    "co-mocha": "^1.1.3",
    "css-loader": "^0.23.1",
    "enzyme": "^2.7.0",
    "eslint": "^3.9.0",
    "eslint-config-shortlyster": "git+https://github.com/Shortlyster/eslint-config-shortlyster.git",
    "eslint-plugin-react": "^6.4.1",
    "eslint_d": "^4.2.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "favicons-webpack-plugin": "0.0.7",
    "file-loader": "^0.9.0",
    "fin-serve": "^1.0.3",
    "html-webpack-plugin": "^2.24.0",
    "husky": "^0.12.0",
    "istanbul": "^0.4.5",
    "jsdom": "^9.9.1",
    "lodash-webpack-plugin": "^0.10.6",
    "mocha": "^3.2.0",
    "react": "^15.1.0",
    "react-addons-test-utils": "^15.4.1",
    "react-dom": "^15.1.0",
    "react-hot-loader": "^1.3.0",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "styled-components": "^1.2.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-bundle-size-analyzer": "^2.2.0",
    "webpack-dev-server": "^1.14.1"
  },
  "author": "Drew Showalter",
  "license": "ISC"
}
